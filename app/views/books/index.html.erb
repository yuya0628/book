

<header>
  <h1 class="heading">Books</h1>
</header>

<body>
<table width="300">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>

   <td><%=  link_to"Edit",edit_book_path(book) %></td>
    <td><%= link_to"Show",book_path(book) %></td>
    <td><%= link_to"Destroy",book_path(book),method: :delete %></td>
  </tr>
  <% end %>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
<div class="error-box"><%= @book.errors.count %>error prohibited this book from being saved:<br/></div>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book,local:true do |form| %>
<div class="x">
<h4>Title</h4>
<%= form.text_field:title %>
<h4>Body</h4>
<%= form.text_area:body %>
</div>
<div class="y">
<%= form.submit "Create Box" %>
</div>
<% end %>
</body>

